<!DOCTYPE html>
<html>
<head>
    <title>The World - @ViewBag.Title</title>
    <base href="/">
    <meta charset="utf-8" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootswatch/yeti/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div id="sidebar">
        @if (User.Identity.IsAuthenticated)
        {
            <img src="~/img/user-male-icon.png" alt="headshot" class="headshot" />
            <span id="username">@User.Identity.Name</span>
        }

        <ul class="nav">
            <li class="active">
                <a asp-controller="App" asp-action="Index">Home</a>
            </li>
            <li>
                <a asp-controller="App" asp-action="About">About</a>
            </li>
            <li>
                <a asp-controller="App" asp-action="Contact">Contact</a>
            </li>
            @if (User.Identity.IsAuthenticated)
            {
                <li>
                    <a asp-controller="App" asp-action="Trips">Trips</a>
                </li>
                <li>
                    <a asp-controller="Auth" asp-action="Logout">Logout</a>
                </li>
            }
        </ul>
    </div>
    <div id="wrapper">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <ul class="nav navbar-nav navbar-left">
                    <li>
                        <button id="sidebarToggle" class="btn btn-primary">
                            <i class="fa fa-angle-left"></i>
                        </button>
                    </li>
                </ul>
                <a asp-controller="App" asp-action="Index" class="navbar-brand">The World</a>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="#" class="btn btn-sm btn-info">
                            <i class="fa fa-save"> Save</i>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="btn btn-sm btn-info">
                            <i class="fa fa-print"> Print</i>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <main class="container-fluid">
            @RenderBody()
        </main>

        <footer class="container">
            <div class="navbar navbar-inverse navbar-fixed-bottom">
                <h4 class="text-center text-info">&copy; 2016 The World</h4>
            </div>

        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <environment names="Development">
        <script src="~/js/site.js"></script>
    </environment>

    <environment names="Production,Staging">
        <script src="~/lib/_app/site.js"></script>
    </environment>

    @RenderSection("Scripts", false)

</body>
</html>